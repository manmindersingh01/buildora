FROM node:18

WORKDIR /app

# Install Azure CLI
RUN apt-get update && \
    curl -sL https://aka.ms/InstallAzureCLIDeb | bash && \
    rm -rf /var/lib/apt/lists/*

# Copy EVERYTHING from your local directory to the container
COPY . .

# Install dependencies
RUN npm install

# Build TypeScript
RUN npm run build

EXPOSE 3000
CMD ["node", "dist/index.js"]